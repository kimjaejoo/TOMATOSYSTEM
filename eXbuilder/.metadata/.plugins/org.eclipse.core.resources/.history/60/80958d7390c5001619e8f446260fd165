<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta name="pyramid-theme" value="gray">
<title>XTM Test Page</title>
<script src="scripts/pyramid.js"></script>
<script>
    function initForm() {
        var manager = new tmt.viewer.Manager();
        var viewer = manager.createViewer();
        viewer.setTargetDivId("container");
        viewer.setSrc("TEST.xtm");
        viewer.setToolBar(true);
        viewer.setAddressBar(true);
        viewer.setMenuBar(true);
        viewer.setStatusBar(true);
        viewer.setClassId("");
        viewer.setWidth(3000);
        viewer.setHeight(3000);
        viewer.setControlName("TmtViewer");
        viewer.setId("TmtViewer");
        manager.addViewer(viewer);
        manager.setCommonResourcePath({image:"./pyramid/images/",doc:"./pyramid/doc/",css:"./pyramid/css/",locale:"./pyramid/locale"});
        manager.useTmtViewer(false);
        manager.useAsync(true);
        manager.apply(manager.MODE.ADD);
    }
</script>
</head>
<body onload="javascript:initForm()">
	<div id="container" class="eXstory_divCanvas"></div>
</body>
</html>